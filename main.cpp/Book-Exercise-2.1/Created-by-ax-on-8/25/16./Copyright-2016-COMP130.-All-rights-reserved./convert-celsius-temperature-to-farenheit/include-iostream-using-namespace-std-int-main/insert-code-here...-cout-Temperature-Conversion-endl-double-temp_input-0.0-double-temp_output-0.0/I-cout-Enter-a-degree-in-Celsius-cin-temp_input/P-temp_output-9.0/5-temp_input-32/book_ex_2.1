#include <iostream>
using namespace std;

int main() {
    
    // insert code here...
    cout << "Temperature Conversion" << endl;
    
    double temp_input = 0.0;
    double temp_output = 0.0;
    
    // I
    cout << "Enter a degree in Celsius: ";
    
    cin >> temp_input;
    
    // P
    temp_output = (9.0 / 5) * temp_input + 32;
    
    // O
    cout << temp_input << " Celsius is " << temp_output << " Farenheit" << endl;
    
    
    return 0;
}
